{
  "name": "aws-spend-monitor-agent",
  "version": "1.0.0",
  "description": "AWS Strands agent for monitoring AWS spend and generating alerts",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "deploy": "cdk deploy",
    "test": "jest",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:setup": "echo 'Setting up integration test environment...' && npm run build",
    "test:integration:run": "RUN_INTEGRATION_TESTS=true npm run test:integration",
    "test:integration:ios": "RUN_INTEGRATION_TESTS=true TEST_IOS_INTEGRATION=true npm run test:integration",
    "test:integration:ai": "./scripts/run-ai-integration-tests.sh",
    "test:integration:ai-performance": "RUN_INTEGRATION_TESTS=true TEST_BEDROCK_INTEGRATION=true RUN_PERFORMANCE_TESTS=true npm run test:integration",
    "test:performance": "RUN_INTEGRATION_TESTS=true jest --config jest.integration.config.js tests/integration/performance.test.ts",
    "test:all": "npm run test:unit && npm run test:integration:run",
    "test:local": "node dist/index.js",
    "test:device-api": "npm run build && node dist/examples/test-device-registration-api.js",
    "validate:config": "npx ts-node scripts/validate-config.ts",
    "validate:pre-deploy": "./scripts/pre-deployment-check.sh",
    "validate:ios": "./scripts/validate-ios-config.sh",
    "validate:deployment": "./scripts/validate-deployment.sh",
    "verify:lambda-bundle": "./scripts/verify-deployed-bundle.sh",
    "test:deployment": "./scripts/test-deployment.sh",
    "validate:all": "npm run validate:config && npm run validate:pre-deploy",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist coverage",
    "diagram:build": "npx -p @mermaid-js/mermaid-cli mmdc -i docs/architecture.mmd -o docs/architecture.png -b transparent -t forest"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.891.0",
    "@aws-sdk/client-cloudwatch": "^3.888.0",
    "@aws-sdk/client-cost-explorer": "^3.450.0",
    "@aws-sdk/client-dynamodb": "^3.888.0",
    "@aws-sdk/client-lambda": "^3.450.0",
    "@aws-sdk/client-sns": "^3.450.0",
    "@aws-sdk/client-bedrock-runtime": "^3.450.0",
    "@aws-sdk/util-dynamodb": "^3.888.0"
  },
  "devDependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.1.3",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "aws",
    "strands",
    "ai-agent",
    "cost-monitoring",
    "alerts"
  ],
  "author": "Your Name",
  "license": "MIT"
}
