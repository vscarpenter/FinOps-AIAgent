# Core configuration
AWS_REGION=us-east-1
SPEND_THRESHOLD=10
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:aws-spend-alerts
CHECK_PERIOD_DAYS=1
RETRY_ATTEMPTS=3
MIN_SERVICE_COST_THRESHOLD=1

# Optional iOS push configuration
IOS_PLATFORM_APP_ARN=
IOS_BUNDLE_ID=com.example.spendmonitor
APNS_SANDBOX=true
APNS_CERTIFICATE_PATH=
APNS_PRIVATE_KEY_PATH=

# Optional Bedrock cost insight configuration
BEDROCK_MODEL_ID=amazon.titan-text-lite-v1
BEDROCK_REGION=us-east-1
BEDROCK_MAX_TOKENS=256
BEDROCK_TEMPERATURE=0.2
BEDROCK_TOP_P=0.9
